<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
    <div class="container">
      <h1><%= @list.name %></h1>
      <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-flat" %>
      <%= link_to "Back", lists_path, class: "btn btn-flat" %>
    </div>
  </div>
  <hr>

  <h3>Movies</h3>
  <hr>
  <div class="container">
    <% @list.bookmarks.each do |bookmark| %>
    <p><%= bookmark.comment %></p>
    <p>Movie: <%= bookmark.movie.title %></p>
    <%= image_tag "#{bookmark.movie.poster_url}", alt: "#{bookmark.movie.title}", width: 200 %>



    <hr>
    <% end %>
  </div>
  <div class="cards">
    <div class="card-product">
      <% @list.bookmarks.each do |bookmark| %>
      <%= image_tag "#{bookmark.movie.poster_url}", alt: "#{bookmark.movie.title}"%>
      <div class="card-product-infos">
        <h2><%= bookmark.movie.title %></h2>
        <p><%= truncate(bookmark.movie.overview, length: 100) %></p>
      </div>
      <% end %>
    </div>
  </div>

</div>
