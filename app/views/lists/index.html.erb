<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "bannerphoto.jpg", alt: "Banner"%>')">
  <div class="container">
    <h1>Movie Lists</h1>
    <%= link_to 'New List', new_list_path, class: "btn btn-flat" %>
  </div>
</div>

<div class="container">
  <h1>Lists</h1>

  <div class="cards">
    <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
      <%= render 'lists/card', list: list  %>
    <% end %>
    <% end %>
  </div>
</div>
